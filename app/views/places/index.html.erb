

<h1>Les annonces :</h1>
<br>
<% if @places.nil? %>
<p> No places yet, search again</p>
<% else %>

<div class="cards">
  <% @places.each do |place| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(224, 218, 218, 0.6), rgba(255, 253, 253, 0.3)), url(<%= place.photos.first.nil? ? 'https://cdn.pixabay.com/photo/2017/09/17/18/15/lost-places-2759275_1280.jpg' : cl_image_path(place.photos.first.key) %>)">
    <p> <%= place.name %> <br>
      <%= place.city %> <br>
      <%= link_to '+', place %>

    </div>
    <% end %>
  </div>
  <% end %>
