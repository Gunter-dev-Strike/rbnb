
<h2 class="h2">Sign up</h2>
<div class='sign_up_container'>


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div  class="form-inputs">
    <%= f.input :username,
                required: false,
                input_html: {id: "sign_username"},
                autofocus: true,
                placeholder: 'username',
                 label:false,
                error: 'Username invalide'
                %>
    <%= f.input :email,
                required: true,
                input_html: {id:"sign_email"},
                autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: 'email', label:false,
                error: 'Email invalide'%>
    <%= f.input :password,
                required: true,
                placeholder: 'mot de passe',
                label:false,
                input_html: {id:"sign_password"},
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                error: 'Mot de passe invalide'
                 %>
    <%= f.input :password_confirmation,
                input_html: {id:"sign_confirm_password"},
                required: true,
                placeholder: 'confirmation mot de passe',
                label:false,
                input_html: { autocomplete: "new-password" },
                error: 'Les deux mot de passe ne correspondent pas' %>
  </div>

  <div class='registration-btn'>
    <%= f.button :submit, "Sign up", id: "sign_up-btn"%>
  </div>
  <% end %>

