<h2 class="h2_log_in">Se connecter</h2>
<div class="log_container">
 <div class="log_content_container">
 <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: false,
                placeholder: 'email'  %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                label: false,
                placeholder: 'mot de passe' %>
    <%= f.input :remember_me, placeholder: 'se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "connexion",class:'btn_log_in' %>
  </div>
  <%= link_to "s'inscrire", new_user_registration_path, class:'sign_up_link' %>
  <% end %>
