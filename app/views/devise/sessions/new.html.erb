<h2 class="h2_log_in">Log in</h2>
<div class="log_container">
 <div class="log_content_container">
 <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :username,
                required: false,
                autofocus: true,
                label: false,
                placeholder: 'username' %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: false,
                placeholder: 'email'  %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                label: false,
                placeholder: 'password' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in",class:'btn_log_in' %>
  </div>
  <%= link_to "sign up", new_user_registration_path, class:'sign_up_link' %>
  <% end %>
